parser: babel-eslint

ecmaFeatures:
  jsx: true
  modules: true
env:
  es6: true
  node: true
rules:
  comma-dangle:
    - 1
    - always-multiline
  curly:
    - 1
    - multi-line
  jsx-quotes: 1
  no-undef: 2
  quotes:
    - 1
    - single
    - avoid-escape
  semi:
    - 2
    - never
  strict:
    - 2
    - never
