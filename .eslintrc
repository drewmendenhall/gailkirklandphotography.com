ecmaFeatures:
  jsx: true
  modules: true
env:
  es6: true
parser: babel-eslint
plugins:
  - react
rules:
  comma-dangle:
    - 2
    - always-multiline
  curly:
    - 2
    - multi-line
  quotes:
    - 2
    - single
    - avoid-escape
  semi:
    - 2
    - never
  strict:
    - 2
    - never
  react/jsx-quotes: 1
  react/jsx-sort-prop-types: 1
  react/jsx-uses-vars: 1
  react/jsx-no-undef: 2
  react/no-multi-comp: 1
  react/no-unknown-property: 1
  react/wrap-multilines: 1
