parser: babel-eslint

ecmaFeatures:
  jsx: true
  modules: true
env:
  es6: true
  node: true
rules:
  comma-dangle: [1, always-multiline]
  curly: [1, multi-line]
  indent: [1, 2, {SwitchCase: 1}]
  no-irregular-whitespace: 2
  no-mixed-spaces-and-tabs: 1
  no-undef: 2
  no-unused-vars: 1
  quotes: [1, single, avoid-escape]
  semi: [2, never]
  strict: [2, never]
